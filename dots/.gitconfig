[user]
	email = l.pilyugin04@gmail.com
	name = Leonid Pilyugin

[credential]
	helper = cache --timeout=3600

[init]
	defaultBranch = main

[core]
	editor = nvim

[pull]
	rebase = false

[merge]
	tool = "nvim"

[mergetool]
	keepBackup = false
	prompt = false

[mergetool "nvim"]
	cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""

